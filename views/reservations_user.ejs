<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Reservations - ParkEasy</title>
    <link rel="stylesheet" href="/main/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'custom-green': '#004643',
                        'custom-light-green': '#abd1c6',
                        'custom-off-white': '#f9bc60',
                        'custom-dark': '#001e1d',
                        'custom-orange': '#e16162',
                        'header-bg': '#0d1a26', 
                        'nav-link': '#98c379',
                        'nav-link-hover': '#c678dd',
                        'button-bg': '#2c3e50',
                        'button-hover-bg': '#34495e',
                        'text-main': '#e0e0e0',
                        'text-accent': '#61afef',
                        'container-bg': '#1a2a3a',
                    }
                }
            }
        }
    </script>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0d1117; 
            color: #c9d1d9; 
        }
        .header-nav a {
            transition: color 0.3s ease, background-color 0.3s ease;
        }
        .form-section input, .form-section select {
            color: #e0e0e0; /* Ensure text in inputs/selects is light */
        }
        .form-section option {
            background-color: #2c3e50; /* Dark background for options */
            color: #e0e0e0;
        }
    </style>
</head>
<body class="bg-custom-dark text-text-main min-h-screen flex flex-col">

    <!-- Header -->
    <header class="bg-header-bg shadow-lg py-6 sticky top-0 z-50">
        <div class="container mx-auto flex justify-between items-center px-8">
            <div class="flex items-center space-x-4">
                <img src="/main/images/output.jpg" alt="ParkEasy Logo" class="h-14">
            </div>
            <nav class="header-nav flex items-center space-x-5">
                <% if (username) { %>
                    <a href="/dashboard" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">Dashboard</a>
                    <a href="/manage_vec" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">Manage Vehicles</a>
                    <a href="/reservations_user" class="bg-green-500 text-white font-semibold text-base px-5 py-2 rounded-md transition-colors">My Reservations</a>
                    <a href="/logout" class="bg-red-500 hover:bg-red-700 text-white font-semibold text-base px-5 py-2 rounded-md transition-colors">Logout</a>
                    <span class="text-lg text-green-400 font-semibold">Welcome, <%= username %>!</span>
                <% } else { %>
                    <a href="/login" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">Login</a>
                    <a href="/signup" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">Sign Up</a>
                <% } %>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-container-bg shadow-xl rounded-lg p-8 md:p-12">
            <h2 class="text-4xl font-bold text-green-400 mb-10 text-center">Manage Your Reservations</h2>

            <div class="grid md:grid-cols-2 gap-12">
                <!-- New Reservation Form -->
                <section class="form-section bg-slate-800 p-6 rounded-lg shadow-md">
                    <h3 class="text-2xl font-semibold text-green-300 mb-6">Create New Reservation</h3>
                    <form id="reservationForm" action="/reservations_user/reserve" method="post" class="space-y-6">
                        <div>
                            <label for="lot" class="block text-sm font-medium text-green-200 mb-1">Select Parking Lot:</label>
                            <select id="lot" name="lot_id" required class="w-full px-4 py-2.5 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500 transition-colors">
                                <option value="" class="text-gray-400">--Choose Lot--</option>
                                <% if (locals.lots && lots.length > 0) { %>
                                    <% lots.forEach(lot => { %>
                                        <option value="<%= lot.lot_id %>">
                                            <%= lot.name %> (Available: <%= lot.available_spaces_count %>)
                                        </option>
                                    <% }); %>
                                <% } else { %>
                                    <option value="" disabled class="text-gray-400">No lots available</option>
                                <% } %>
                            </select>
                        </div>
                    
                        <div>
                            <label for="vehicle" class="block text-sm font-medium text-green-200 mb-1">Select Vehicle:</label>
                            <select id="vehicle" name="vehicle_id" required class="w-full px-4 py-2.5 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500 transition-colors">
                                <option value="" class="text-gray-400">--Choose Vehicle--</option>
                                <% if (locals.vehicles && vehicles.length > 0) { %>
                                    <% vehicles.forEach(v => { %>
                                        <option value="<%= v.vehicle_id %>">
                                            <%= v.registration %>
                                        </option>
                                    <% }) %>
                                <% } else { %>
                                    <option value="" disabled class="text-gray-400">No vehicles registered. Please add one in 'Manage Vehicles'.</option>
                                <% } %>
                            </select>
                        </div>
                    
                        <div>
                            <label for="entry" class="block text-sm font-medium text-green-200 mb-1">Entry Date & Time:</label>
                            <input type="datetime-local" id="entry" name="start_time" required class="w-full px-4 py-2.5 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500 transition-colors" />
                        </div>
                    
                        <div>
                            <label for="exit" class="block text-sm font-medium text-green-200 mb-1">Exit Date & Time:</label>
                            <input type="datetime-local" id="exit" name="end_time" required class="w-full px-4 py-2.5 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500 transition-colors" />
                        </div>
                    
                        <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-md transition-colors text-lg">Reserve Spot</button>
                    </form>
                </section>
                
                <!-- Current Reservations List -->
                <section class="list-section bg-slate-800 p-6 rounded-lg shadow-md">
                    <h3 class="text-2xl font-semibold text-green-300 mb-6">Your Active Reservations</h3>
                    <div id="reservationList" class="space-y-4 max-h-[60vh] overflow-y-auto pr-2">
                        <% if (locals.reservations && reservations.length > 0) { %>
                            <% reservations.forEach(reservation => { %>
                                <div class="reservation-card bg-slate-700 p-5 rounded-lg shadow-lg hover:shadow-slate-600 transition-shadow duration-300">
                                    <p class="text-lg font-semibold text-green-400">Lot: <%= reservation.lot_name %></p>
                                    <p class="text-sm text-gray-300">Vehicle: <%= reservation.registration %></p>
                                    <p class="text-sm text-gray-300">Entry: <%= new Date(reservation.start_time).toLocaleString() %></p>
                                    <p class="text-sm text-gray-300">Exit: <%= new Date(reservation.end_time).toLocaleString() %></p>
                        
                                    <form method="POST" action="/reservations_user/delete" class="mt-4">
                                        <input type="hidden" name="reservation_id" value="<%= reservation.reservation_id %>">
                                        <input type="hidden" name="space_id" value="<%= reservation.space_id %>">
                                        <button type="submit" class="w-full text-sm bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md shadow hover:shadow-md transition duration-150 ease-in-out">Cancel Reservation</button>
                                    </form>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-gray-400 text-center py-10 text-lg">You have no active reservations.</p>
                        <% } %>
                    </div>
                </section>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-header-bg shadow-top mt-auto py-8">
        <div class="container mx-auto px-8 text-center">
            <p class="text-green-400">&copy; 2024 ParkEasy. All rights reserved.</p>
            <p class="text-slate-400 text-sm mt-2">Your hassle-free parking solution.</p>
        </div>
    </footer>

    <script src="/js/reservations_user.js" defer></script> 
</body>
</html>
