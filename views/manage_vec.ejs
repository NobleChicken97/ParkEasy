<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Vehicles - ParkEasy</title>
    <link rel="stylesheet" href="/main/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'custom-green': '#004643',
                        'custom-light-green': '#abd1c6',
                        'custom-off-white': '#f9bc60',
                        'custom-dark': '#001e1d',
                        'custom-orange': '#e16162',
                        'header-bg': '#0d1a26', // Dark blue-grey for header
                        'nav-link': '#98c379',    // Light green for nav links
                        'nav-link-hover': '#c678dd', // Purple for nav link hover
                        'button-bg': '#2c3e50',      // Dark slate for buttons
                        'button-hover-bg': '#34495e', // Slightly lighter slate for button hover
                        'text-main': '#e0e0e0',      // Light grey for main text
                        'text-accent': '#61afef',    // Blue for accents
                        'container-bg': '#1a2a3a',   // Dark container background
                    }
                }
            }
        }
    </script>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0d1117; /* GitHub dark background */
            color: #c9d1d9; /* GitHub dark text */
        }
        .header-nav a {
            transition: color 0.3s ease, background-color 0.3s ease;
        }
    </style>
</head>
<body class="bg-custom-dark text-text-main min-h-screen flex flex-col">

    <!-- Header -->
    <header class="bg-header-bg shadow-lg py-6 sticky top-0 z-50">
        <div class="container mx-auto flex justify-between items-center px-8">
            <div class="flex items-center space-x-4">

                <h1 class="text-4xl font-bold text-green-400">ParkEasy</h1> <!-- Increased title size -->
            </div>
            <nav class="header-nav flex items-center space-x-5">
                <% if (username) { %>
                    <a href="/dashboard" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">Dashboard</a>
                    <a href="/manage_vec" class="bg-green-500 text-white font-semibold text-base px-5 py-2 rounded-md transition-colors">Manage Vehicles</a>
                    <a href="/reservations_user" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">My Reservations</a>
                    <a href="/logout" class="bg-red-500 hover:bg-red-700 text-white font-semibold text-base px-5 py-2 rounded-md transition-colors">Logout</a>
                    <!-- <span class="text-lg text-green-400 font-semibold">Welcome, <%= username %>!</span> -->
                <% } else { %>
                    <a href="/login" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">Login</a>
                    <a href="/signup" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">Sign Up</a>
                <% } %>
                <!-- <a href="/about" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">About Us</a> -->
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-container-bg shadow-xl rounded-lg p-8 md:p-12">

            <% if (error && error.length > 0) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <strong class="font-bold">Error!</strong>
                    <span class="block sm:inline"><%= error.join(', ') %></span>
                </div>
            <% } %>
            <% if (success_msg && success_msg.length > 0) { %>
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <strong class="font-bold">Success!</strong>
                    <span class="block sm:inline"><%= success_msg.join(', ') %></span>
                </div>
            <% } %>

            <h2 class="text-4xl font-bold text-green-400 mb-10 text-center">Manage Your Vehicles</h2>

            <!-- Add Vehicle Form -->
            <div class="mb-12 bg-slate-800 p-6 rounded-lg shadow-md">
                <h3 class="text-2xl font-semibold text-green-300 mb-6">Add New Vehicle</h3>
                <form action="/add-vehicle" method="POST" class="space-y-6">
                    <div>
                        <label for="vehicle_number" class="block text-sm font-medium text-green-200 mb-1">Vehicle Number (License Plate)</label>
                        <input type="text" name="license_plate" id="vehicle_number" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500 placeholder-gray-400" placeholder="e.g., MH01AB1234">
                    </div>
                    <div>
                        <label for="vehicle_type" class="block text-sm font-medium text-green-200 mb-1">Vehicle Type</label>
                        <select name="vehicle_type" id="vehicle_type" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500">
                            <option value="2-wheeler">2-Wheeler</option>
                            <option value="4-wheeler">4-Wheeler</option>
                        </select>
                    </div>
                    <div>
                        <label for="model" class="block text-sm font-medium text-green-200 mb-1">Vehicle Model</label>
                        <input type="text" name="model" id="model" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500 placeholder-gray-400" placeholder="e.g., Honda Activa, Maruti Swift">
                    </div>
                    <div>
                        <label for="color" class="block text-sm font-medium text-green-200 mb-1">Vehicle Color</label>
                        <input type="text" name="color" id="color" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500 placeholder-gray-400" placeholder="e.g., Red, Blue, Black">
                    </div>
                    <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-md transition-colors text-lg">Add Vehicle</button>
                </form>
            </div>

            <!-- Registered Vehicles Table -->
            <div>
                <h3 class="text-2xl font-semibold text-green-300 mb-6">Your Registered Vehicles</h3>
                <% if (data && data.length > 0) { %>
                    <div class="overflow-x-auto bg-slate-800 rounded-lg shadow-md">
                        <table class="min-w-full divide-y divide-slate-700">
                            <thead class="bg-slate-700">
                                <tr>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-green-300 uppercase tracking-wider">Vehicle Number</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-green-300 uppercase tracking-wider">Vehicle Type</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-green-300 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-slate-800 divide-y divide-slate-700">
                                <% data.forEach(vehicle => { %>
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-100"><%= vehicle.license_plate %></td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= vehicle.vehicle_type %></td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            <form action="/delete-vehicle" method="POST" onsubmit="return confirm('Are you sure you want to delete this vehicle?');" style="display: inline;">
                                                <input type="hidden" name="vehicle_id" value="<%= vehicle.vehicle_id %>">
                                                <button type="submit" class="text-red-500 hover:text-red-700 font-semibold">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-center text-gray-400 py-8 text-lg">You have not added any vehicles yet.</p>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-header-bg shadow-top mt-auto py-8">
        <div class="container mx-auto px-8 text-center">
            <p class="text-green-400">&copy; 2024 ParkEasy. All rights reserved.</p>
            <p class="text-slate-400 text-sm mt-2">Your hassle-free parking solution.</p>
        </div>
    </footer>

</body>
</html>
