<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Issue Fine - ParkEasy</title>
    <link rel="stylesheet" href="/main/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'custom-green': '#004643',
                        'custom-light-green': '#abd1c6',
                        'custom-off-white': '#f9bc60',
                        'custom-dark': '#001e1d',
                        'custom-orange': '#e16162',
                        'header-bg': '#0d1a26',
                        'nav-link': '#98c379',
                        'nav-link-hover': '#c678dd',
                        'button-bg': '#2c3e50',
                        'button-hover-bg': '#34495e',
                        'text-main': '#e0e0e0',
                        'text-accent': '#61afef',
                        'container-bg': '#1a2a3a',
                    }
                }
            }
        }
    </script>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0d1117;
            color: #c9d1d9;
        }
        .header-nav a {
            transition: color 0.3s ease, background-color 0.3s ease;
        }
        .form-section input, .form-section select, .form-section textarea {
            color: #e0e0e0; 
        }
        .form-section option {
            background-color: #2c3e50; 
            color: #e0e0e0;
        }
    </style>
</head>
<body class="bg-custom-dark text-text-main min-h-screen flex flex-col">

    <!-- Header -->
    <header class="bg-header-bg shadow-lg py-6 sticky top-0 z-50">
        <div class="container mx-auto flex justify-between items-center px-8">
            <div class="flex items-center space-x-4">
                <img src="/main/images/output.jpg" alt="ParkEasy Logo" class="h-14">
            
            </div>
            <nav class="header-nav flex items-center space-x-5">
                <% if (username) { %>
                    <span class="text-lg text-green-400 font-semibold">Employee: <%= username %></span>
                <% } %>
                <a href="/dashboard" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">Dashboard</a>
                <a href="/manage_user_manage" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">Manage Users</a>
                <a href="/lots" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">Manage Lots</a>
                <a href="/issue_fine" class="bg-green-500 text-white font-semibold text-base px-5 py-2 rounded-md transition-colors">Issue Fine</a>
                <a href="/logs" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">View Logs</a>
                <a href="/revenue" class="bg-slate-700 hover:bg-green-500 hover:text-white text-green-400 font-semibold text-base px-5 py-2 rounded-md transition-colors">Revenue</a>
                <a href="/logout" class="bg-red-500 hover:bg-red-700 text-white font-semibold text-base px-5 py-2 rounded-md transition-colors">Logout</a>
                
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-container-bg shadow-xl rounded-lg p-8 md:p-12">
            <h2 class="text-4xl font-bold text-green-400 mb-10 text-center">Fines Management</h2>

            <div class="grid md:grid-cols-2 gap-12">
                <!-- Issue New Fine Form -->
                <section class="form-section bg-slate-800 p-6 rounded-lg shadow-md">
                    <h3 class="text-2xl font-semibold text-green-300 mb-6">Issue New Fine</h3>
                    <% if (locals.messages && messages.success) { %>
                        <div class="bg-green-700/50 border border-green-500 text-green-200 px-4 py-3 rounded mb-4">
                            <%= messages.success %>
                        </div>
                    <% } %>
                    <% if (locals.messages && messages.error) { %>
                        <div class="bg-red-700/50 border border-red-500 text-red-200 px-4 py-3 rounded mb-4">
                            <%= messages.error %>
                        </div>
                    <% } %>
                    <form id="fineForm" action="/issue_fine" method="POST" class="space-y-6">
                        <div>
                            <label for="user_id" class="block text-sm font-medium text-green-200 mb-1">User:</label>
                            <select id="user_id" name="user_id" required class="w-full px-4 py-2.5 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500">
                                <option value="" disabled selected>Select a user</option>
                                <% if (locals.users && users.length > 0) { %>
                                    <% users.forEach(user => { %>
                                        <option value="<%= user.user_id %>"><%= user.name %> (ID: <%= user.user_id %>)</option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div>
                            <label for="vehicle_id" class="block text-sm font-medium text-green-200 mb-1">Vehicle (Optional):</label>
                            <select id="vehicle_id" name="vehicle_id" class="w-full px-4 py-2.5 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500">
                                <option value="">No vehicle</option>
                                <% if (locals.vehicles && vehicles.length > 0) { %>
                                    <% vehicles.forEach(vehicle => { %>
                                        <option value="<%= vehicle.vehicle_id %>"><%= vehicle.license_plate %> (ID: <%= vehicle.vehicle_id %>)</option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div>
                            <label for="reason" class="block text-sm font-medium text-green-200 mb-1">Reason:</label>
                            <input type="text" id="reason" name="reason" placeholder="Reason for fine" required class="w-full px-4 py-2.5 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500 placeholder-gray-400">
                        </div>
                        <div>
                            <label for="amount" class="block text-sm font-medium text-green-200 mb-1">Amount (₹):</label>
                            <input type="number" id="amount" name="amount" placeholder="Fine amount" required class="w-full px-4 py-2.5 bg-slate-700 border border-slate-600 rounded-md text-white focus:ring-green-500 focus:border-green-500 placeholder-gray-400" min="0" step="0.01">
                        </div>
                        <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-md transition-colors text-lg">Issue Fine</button>
                    </form>
                </section>

                <!-- All Issued Fines Table -->
                <section class="bg-slate-800 p-6 rounded-lg shadow-md">
                    <h3 class="text-2xl font-semibold text-green-300 mb-6">All Issued Fines</h3>
                    <div class="overflow-x-auto max-h-[70vh]">
                        <table class="min-w-full divide-y divide-slate-700">
                            <thead class="bg-slate-700 sticky top-0">
                                <tr>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-green-300 uppercase tracking-wider">Date</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-green-300 uppercase tracking-wider">User Name</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-green-300 uppercase tracking-wider">Vehicle No.</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-green-300 uppercase tracking-wider">Reason</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-green-300 uppercase tracking-wider">Amount (₹)</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-green-300 uppercase tracking-wider">Status</th>
                                </tr>
                            </thead>
                            <tbody id="finesTableBody" class="bg-slate-800 divide-y divide-slate-700">
                                <% if (locals.fines && fines.length > 0) { %>
                                    <% fines.forEach(fine => { %>
                                        <tr class="hover:bg-slate-700/50 transition-colors">
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-100"><%= new Date(fine.issue_date).toLocaleDateString() %></td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-100"><%= fine.user_name || fine.user_id %></td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= fine.vehicle_number || 'N/A' %></td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= fine.reason %></td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300 text-right"><%= parseFloat(fine.amount).toFixed(2) %></td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold <%= fine.status === 'Paid' ? 'text-green-400' : 'text-red-400' %>">
                                                <%= fine.status === 'Paid' ? 'Paid' : 'Unpaid' %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="px-6 py-10 text-center text-sm text-gray-400">No fines issued yet.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-header-bg shadow-top mt-auto py-8">
        <div class="container mx-auto px-8 text-center">
            <p class="text-green-400">&copy; 2024 ParkEasy. All rights reserved.</p>
            <p class="text-slate-400 text-sm mt-2">Your hassle-free parking solution.</p>
        </div>
    </footer>

  <script src="/js/issue_fine.js" defer></script>
</body>
</html>
